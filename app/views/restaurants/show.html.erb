<div class="d-flex justify-content-between p-3">
  <div></div>
  <h1> <%= @restaurant.name %> </h1>
  <%= link_to "List of restaurants", restaurants_path, class: "btn btn-secondary btn-opacity-25 p-3" %>
</div>

<h2><%= @restaurant.phone_number %></h2>

<p><%= @restaurant.address %></p>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>
<br>
<%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-success btn-opacity-25 p-3" %>
